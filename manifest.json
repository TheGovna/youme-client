{
  "manifest_version": 2,

  "name": "YouMe",
  "description": "foobar",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "http://www.youtube.com/",
    "https://www.youtube.com/"
  ]
}
